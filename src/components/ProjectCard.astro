---
import { GitHubLogoIcon } from "@radix-ui/react-icons";
import { FaGlobe } from "react-icons/fa";

interface Props {
  title: string;
  github: string;
  website: string;
  desc: string
  thumbnail: string;
  slug: string
}

const {desc, github, thumbnail, title, website, slug} = Astro.props
---

<div class="sm:max-w-[300px] sm:h-[310px] md:h-[330px] border rounded-lg shadow-sm flex flex-col">
        <img src={thumbnail} alt={title} class="sm:object-cover h-[164px] w-full" />
        <div class="px-2 py-4 h-full flex flex-col justify-between">
          <div class="">
            <h3 class="text-xl"><a href={"/projects/" + slug}>{title}</a></h3>
            <p>
              {desc.length > 75
                ? `${desc.slice(0, 75)} ....`
                : desc}
            </p>
          </div>
          <div class="flex justify-between items-center">
            <div class="flex gap-3 items-center">
              {github ? <a href={github} class="flex items-center gap-1">
                <GitHubLogoIcon /> Github
              </a> : <></>}
              <a href={website} class="flex items-center gap-1">
              </a>
              {website ? <a href={website} class="flex items-center gap-1">
                <FaGlobe /> Website
              </a> : <></>}
            </div>
            <a href={`/projects/${slug}`} class="block text-right text-blue-800">
              Read More ->
            </a>
          </div>
        </div>
    </div>
