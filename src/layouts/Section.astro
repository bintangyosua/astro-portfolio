---
interface Props {
  title: string
  link: string
}

const { title, link } = Astro.props
---

<div>
  <div class="flex justify-between items-center">
    <h2 class="text-2xl">{title}</h2>
    <!-- svelte-ignore a11y-invalid-attribute -->
    <a href={link}>View All -></a>
  </div>
  <hr class="my-3" />
  <slot />
</div>
